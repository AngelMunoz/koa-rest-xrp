{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2015",
    "target": "ES2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "sourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "bin"
  },
  "inclure": ["src"],
  "exclude": ["node_modules"]
}
